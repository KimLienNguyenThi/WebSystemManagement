@section Scripts {

    <script>
        $(document).ready(function () {
            fullHeight();
            loader();
            scrollWindow();
            contentWayPoint();
            counter();
            highlightTabActive();

            $.ajax({
                url: `/ContactGuest/GetListServiceID`, // Thay URL này bằng URL thật trong backend

                type: "GET",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    console.log("Kết quả list dịch vụ dropdown", data);
                    const select = $('#serviceType'); // sửa ID cho đúng

                    select.empty().append('<option value="">-- Chọn --</option>');

                    data.listRegu.forEach(function (item) {
                        select.append(`<option value="${item.serviceGroupid}" data-price="${item.price}">${item.serviceTypeNames}</option>`);
                    });

                    select.change(function () {
                        const selectedOption = $(this).find("option:selected");
                        const price = selectedOption.data("price");
                        const totalPriceElement = $('#totalPrice');

                        if (price) {
                            totalPriceElement.text(`Tổng tiền: ${price} VNĐ`);
                        } else {
                            totalPriceElement.text('Tổng tiền: 0 VNĐ');
                        }
                    });

                },
                error: function () {
                    showError("Không lấy được danh sách loại dịch vụ!");
                }
            });
        });
    </script>
    <script>

        function validateAndCreateContact() {

            // Xóa thông báo cũ
            document.getElementById('name-error').innerHTML = '';
            document.getElementById('email-error').innerHTML = '';
            document.getElementById('phone-error').innerHTML = '';
            document.getElementById('serviceType-error')?.remove(); // nếu có lỗi cũ

            var serviceTypeDropdown = document.getElementById("serviceType");
            var selectedOption = serviceTypeDropdown.options[serviceTypeDropdown.selectedIndex];
            var subject = selectedOption.text;
            var serviceValue = serviceTypeDropdown.value;

            var companyName = document.getElementById("companyName").value.trim();
            var name = document.getElementById("name").value.trim();
            var email = document.getElementById("email").value.trim();
            var message = document.getElementById("message").value.trim();
            var phone = document.getElementById("phone").value.trim();

            if (name === '') {
                document.getElementById('name-error').innerHTML = 'Vui lòng nhập họ tên';
                document.getElementById('name-error').classList.add('show');
                return;
            }

            if (email === '') {
                document.getElementById('email-error').innerHTML = 'Vui lòng nhập email';
                document.getElementById('email-error').classList.add('show');
                return;
            }
            else

                if (!validateEmail(email)) {
                    document.getElementById('email-error').innerHTML = 'Email không hợp lệ';
                    document.getElementById('email-error').classList.add('show');
                    return;
                }

            if (phone === '') {
                document.getElementById('phone-error').innerHTML = 'Vui lòng nhập số điện thoại';
                document.getElementById('phone-error').classList.add('show');
                return;
            }

            // Kiểm tra chọn dịch vụ
            if (serviceValue === '') {
                var errorSpan = document.createElement('div');
                errorSpan.id = 'serviceType-error';
                errorSpan.className = 'invalid-feedback d-block';
                errorSpan.textContent = 'Vui lòng chọn loại dịch vụ';
                serviceTypeDropdown.closest('.form-group').appendChild(errorSpan);
                return;
            }
            var data = {
                name: name,
                email: email,
                subject: subject,
                message: message,
                companyName: companyName,
                phone: phone
            };

            $.ajax({
                url: "/ContactGuest/CreateContact",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(data),
                success: function (result) {
                    // Gọi modal thành công (Bootstrap 5)
                    const modalSuccess = new bootstrap.Modal(document.getElementById('ModalSuccess'));
                    document.getElementById('contentModalSuccess').innerText = 'Gửi liên hệ thành công! Chúng tôi sẽ phản hồi sớm nhất.';
                    modalSuccess.show();
                },
                error: function (xhr, status, error) {
                    const modalFail = new bootstrap.Modal(document.getElementById('failModal'));
                    modalFail.show();
                }
            });
        }

    </script>

    @Html.Raw(@"
            <script>
            function validateEmail(email) {
            var re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return re.test(email);
            }
            </script>
            ")
}
