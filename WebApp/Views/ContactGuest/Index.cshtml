    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="successModalLabel">Thành công!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Tạo thành công.
            </div>
            <div class="modal-footer">
                <button id="buttonCloseModal" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal thông báo -->
<div class="modal fade" id="failModal" tabindex="-1" aria-labelledby="failModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="failModalLabel">Tạo thất bại</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <span id="contentModalError"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
}
@section Scripts {

    <script>
        $(document).ready(function () {
            fullHeight();
            loader();
            scrollWindow();
            contentWayPoint();
            counter();
            highlightTabActive();


        });
    </script>
    <script>
        function validateAndCreateContact() {

            // Xóa thông báo cũ
            document.getElementById('name-error').innerHTML = '';
            document.getElementById('email-error').innerHTML = '';
            document.getElementById('phone-error').innerHTML = '';


            var name = document.getElementById("name").value.trim();
            var email = document.getElementById("email").value.trim();
            var subject = document.getElementById("subject").value.trim();
            var message = document.getElementById("message").value.trim();
            var phone = document.getElementById("phone").value.trim();

            if (name === '') {
                document.getElementById('name-error').innerHTML = 'Vui lòng nhập họ tên';
                document.getElementById('name-error').classList.add('show');
                return;
            }

            if (email === '') {
                document.getElementById('email-error').innerHTML = 'Vui lòng nhập email';
                document.getElementById('email-error').classList.add('show');
                return;
            }
            else

                if (!validateEmail(email)) {
                    document.getElementById('email-error').innerHTML = 'Email không hợp lệ';
                    document.getElementById('email-error').classList.add('show');
                    return;
                }

            if (phone === '') {
                document.getElementById('phone-error').innerHTML = 'Vui lòng nhập số điện thoại';
                document.getElementById('phone-error').classList.add('show');
                return;
            }

            var data = {
                name: name,
                email: email,
                subject: subject,
                message: message,
                phone: phone
            };

            $.ajax({
                url: "/ContactGuest/CreateContact",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(data),
                success: function (result) {
                    $('#successModal').modal('show');
                },
                error: function (xhr, status, error) {
                    console.log("Lỗi khi gửi yêu cầu AJAX:", xhr.responseText);
                    document.getElementById("contentModalError").innerHTML = "Tạo liên hệ không thành công!";
                    $('#failModal').modal('show');
                }
            });
        }

    </script>

    @Html.Raw(@"
            <script>
            function validateEmail(email) {
            var re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return re.test(email);
            }
            </script>
            ")
}
