@model WebApp.DTO.StatusSignClient

@{
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
    ViewBag.Title = "Thanh Toán";
}

<h2>Thông tin thanh toán</h2>

<form method="post" action="/Payment/ThanhToanVNPAY">
    <label>Số tiền thanh toán (VND):</label>
    <input type="number" name="amount" value="@Model.amount" required />

    <label>Nội dung thanh toán:</label>
    <input type="text" name="orderInfo" value="Thanh toán hợp đồng @Model.fileName" required />

    <input type="hidden" name="maHopDong" value="@Model.fileName" />
    <input type="hidden" name="email" value="@Model.email" />

    <input type="submit" value="Thanh toán qua VNPAY" />
</form>
