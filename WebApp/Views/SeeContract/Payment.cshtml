@model WebApp.DTO.StatusSignClient

@{
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
    ViewBag.Title = "Thanh Toán";
}

<h2>Thông tin thanh toán</h2>

<form method="post" asp-controller="Payment" asp-action="ThanhToanVNPAY">
    <label>Số tiền thanh toán (VND):</label>
    <input type="number" name="soTien" value="@Model.amount" required />

    <label>Nội dung thanh toán:</label>
    <input type="text" name="orderInfo" value="Thanh toán hợp đồng @Model.fileName" readonly />

    <input type="hidden" name="maHopDong" value="@Model.contractnumber" />
    <input type="submit" value="Thanh toán qua VNPAY" />
</form>
