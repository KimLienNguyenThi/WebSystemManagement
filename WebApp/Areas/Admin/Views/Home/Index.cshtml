                                    <th>Tài khoản root</th>
                                    <th>Ngày cấp tài khoản</th>
                                    <th>Trạng thái</th>
                                    <th>Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Thêm các dòng khác tương tự -->
