@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background: #f4f6f9;
        margin: 0;
        padding: 0;
    }

    .hidden {
        display: none !important;
    }

    .container {
        padding: 20px;
    }

    .stat-boxes {
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-start;
        gap: 15px;
        margin-bottom: 10px;
    }

    .stat-box {
        flex: 0 0 calc(25% - 15px); /* 4 cột mỗi hàng */
        background: #6c757d;
        color: #fff;
        padding: 15px 20px;
        border-radius: 6px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        min-width: 220px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        transition: transform 0.2s ease;
    }

        .stat-box:hover {
            transform: translateY(-3px);
        }

        .stat-box .info {
            text-align: left;
        }

            .stat-box .info h2 {
                margin: 0;
                font-size: 22px;
                font-weight: bold;
            }

            .stat-box .info div {
                font-size: 14px;
                margin-top: 5px;
            }

        .stat-box .icon {
            font-size: 24px;
            opacity: 0.8;
        }

    /* Màu */
    .purple {
        background-color: #6f42c1;
    }

    .blue {
        background-color: #007bff;
    }

    .green {
        background-color: #28a745;
    }

    .orange {
        background-color: #fd7e14;
    }

    .red {
        background-color: #dc3545;
    }

    .cyan {
        background-color: #17a2b8;
    }

    @@media (max-width: 768px) {
        .stat-box {
            flex: 0 0 calc(33.333% - 20px);
        }
    }

    @@media (max-width: 576px) {
        .stat-box {
            flex: 0 0 100%;
        }
    }


    
</style>

<body>

    <div id="companyListContainer" class="container-fluid d-flex flex-column vh-100">
        <!-- Mục hiển thị danh sách -->
        <div class="row flex-grow-1 overflow-auto">
            <div class="col-12">
                <div id="clientPanel" class="sub-panel">
                    @* hiển thị nội dung của khách hàng *@
                </div>
               
            </div>
        </div>
    </div>

</body>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    let starChartInstance = null;
    
    const tokenJWT = localStorage.getItem("accessToken");
    $(document).ready(function () {
        loadClientOverview();
    });

    //  // ==================== CLIENT ====================
    function loadClientOverview() {
        $.ajax({
            url: '/admin/StatisticsReports/GetCustomerOverview',
            method: 'GET',
            headers: {
                "Authorization": "Bearer " + tokenJWT  // Thêm token JWT nếu cần thiết
            },
            success: function (data) {
                const dto = data.data;
                const panel = $('#clientPanel');
                panel.html(`
                        <div class="stat-boxes">
                            <div class="stat-box purple">
                                <div class="info">
                                    <h2>${dto.totalContactRequests}</h2>
                                    <div>Yêu cầu tạo hợp đồng</div>
                                </div>
                                <div class="icon">📝</div>
                            </div>
                            <div class="stat-box blue">
                                <div class="info">
                                    <h2>${dto.totalApprovedCompanies}</h2>
                                    <div>Khách hàng đã duyệt</div>
                                </div>
                                <div class="icon">✅</div>
                            </div>
                            <div class="stat-box green">
                                <div class="info">
                                    <h2>${dto.activeContracts}</h2>
                                    <div>HĐ đang hoạt động</div>
                                </div>
                                <div class="icon">📄</div>
                            </div>
                            <div class="stat-box orange">
                                <div class="info">
                                    <h2>${dto.normalApprovedContracts}</h2>
                                    <div>HĐ loại thường</div>
                                </div>
                                <div class="icon">📁</div>
                            </div>
                            <div class="stat-box red">
                                <div class="info">
                                    <h2>${dto.vipApprovedContracts}</h2>
                                    <div>HĐ loại VIP</div>
                                </div>
                                <div class="icon">👑</div>
                            </div>
                            <div class="stat-box cyan">
                                <div class="info">
                                    <h2>${dto.expiringContracts}</h2>
                                    <div>HĐ sắp hết hạn</div>
                                </div>
                                <div class="icon">⏰</div>
                            </div>
                        </div>
                    `);
            }
        });
    }


</script>

