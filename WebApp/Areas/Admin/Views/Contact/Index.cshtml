<!DOCTYPE html>
<html lang="en">
<head>
    <style>
         .popup-overlay {
        position: fixed;
        top: 0; left: 0; right: 0; bottom: 0;
        background-color: rgba(0, 0, 0, 0.4);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .popup {
        background-color: #fff;
        padding: 20px 30px;
        border-radius: 12px;
        width: 500px;
        max-width: 90%;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        position: relative;
        font-family: sans-serif;
    }

    .popup h3 {
        margin-top: 0;
        color: #333;
        text-align: center;
    }

    .popup .close-btn {
        position: absolute;
        top: 10px;
        right: 12px;
        font-size: 22px;
        background: none;
        border: none;
        cursor: pointer;
        color: #888;
    }

    .popup .close-btn:hover {
        color: #000;
    }

    .popup .popup-content {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 10px 15px;
        margin-top: 15px;
    }

    .popup .label {
        font-weight: bold;
        color: #444;
    }

    .popup .value {
        color: #333;
        word-break: break-word;
    }

    .popup .footer-time {
        margin-top: 15px;
        font-size: 0.85em;
        text-align: right;
        color: #888;
    }

    .popup .popup-actions {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 20px;
    }

    .popup .popup-actions button {
        padding: 8px 16px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: bold;
    }

    .popup .btn-confirm {
        background-color: #4CAF50;
        color: white;
    }

    .popup .btn-close {
        background-color: #ccc;
        color: #333;
    }

    .popup .btn-confirm:hover {
        background-color: #45a049;
    }

    .popup .btn-close:hover {
        background-color: #bbb;
    }

        @Html.Raw(@"
            <style>
            @keyframes fadeIn {
                from { opacity: 0; transform: translateY(-20px); }
                to   { opacity: 1; transform: translateY(0); }
            }
            </style>
            ")
    </style>
</head>
<body>
    <div id="contactListContainer" class="container-fluid d-flex flex-column vh-100">
        <!-- Mục lọc -->
        <div class="row flex-shrink-0">
            <div class="col-12">
                <div class="card p-2">
                    <form class="d-flex align-items-center w-100" style="gap: 10px;">
                        <input id="keyword" type="text" class="form-control form-control-sm w-25" style="min-width: 170px; padding: 5px;" placeholder="SĐT/Tên khách hàng/Email">
                        <select class="form-select form-select-sm" style="padding: 5px;">
                            <option value="-1" selected>Tất cả</option>
                            <option value="1">Đã liên hệ</option>
                            <option value="0">Chưa liên hệ</option>
                        </select>

                        <button id="searchBtn" onclick="init(event)" class="btn btn-primary btn-sm flex-grow-1 px-3" style="padding: 5px; margin-right: 10px;width: 500px;">🔍 Tìm kiếm</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Mục hiển thị danh sách -->
        <div class="row flex-grow-1 overflow-auto">
            <div class="col-12">
                <div class="card p-3 h-100">
                    <div class="table-responsive h-100">
                        <table id="listContact" class="table table-striped table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Tên khách hàng</th>
                                    <th>Số điện thoại</th>
                                    <th>Email</th>
                                    <th>Tiêu đề</th>
                                    <th>Nội dung</th>
                                    <th>Trạng thái</th>
                                    <th>Ngày tạo</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Thêm các dòng khác tương tự -->
                            </tbody>
                        </table>

                        <!-- iframe hiển thị PDF -->
                        @* <div id="pdfViewer" class="hidden mt-3" style="border:none; text-align: center;">
                        <iframe id="pdfFrame" src="" width="90%" height="470px" style="border:none;"></iframe>
                        </div> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

